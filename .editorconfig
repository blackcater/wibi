# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.styl]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.pug]
indent_style = space
indent_size = 2

[{package.json,.babelrc,.csscomb.json}]
indent_style = space
indent_size = 2
