{
  "parser": "vue-eslint-parser",
  "parserOptions": { "parser": "babel-eslint" },
  "extends": ["eslint:recommended", "standard", "prettier", "plugin:vue/strongly-recommended"],
  "plugins": [
    "node",
    "import",
    "promise",
    "standard",
    "prettier",
    "vue"
  ],
  "rules": {
    // prettier
    "prettier/prettier": ["error"],

    // basic
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],

    // vue
    "vue/require-default-prop": ["off"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}
