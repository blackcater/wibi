{
  "extends": ["standard", "prettier", "plugin:vue/strongly-recommended"],
  "plugins": [
    "prettier",
    "standard",
    "promise",
    "import",
    "node"
  ],
  "rules": {
    // prettier
    "prettier/prettier": "error",

    // basic
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],

    // vue
    "vue/require-default-prop": ["off"]
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  }
}
